
@{
    ViewBag.Title = "Đổi mật khẩu";
    Layout = "~/Views/Shared/Login_layout.cshtml";
    var userId = (long)ViewBag.UserId;
    var err = (string)ViewBag.PassError;
}

<div class="login-logo">
    <h3>Đổi mật khẩu</h3>
</div>
<div class="login-form">
    @using (Html.BeginForm("ChangePass", "Login", FormMethod.Post, new { id = "ChangePassword" }))
    {
        <input type="hidden" name="userId" id="userId" value="@userId">
        <div class="form-group">
            <label>Mật khẩu cũ</label>
            <input class="au-input au-input--full" type="password" name="exPass" id="exPass" placeholder="Nhập mật khẩu cũ">
            <label class="error"> @err</label>
        </div>
        <div class="form-group">
            <label>Mật khẩu mới</label>
            <input class="au-input au-input--full" type="password" name="newPass" id="newPass" placeholder="Nhập mật khẩu mới">
        </div>
        <div class="form-group">
            <label>Nhập lại mật khẩu mới</label>
            <input class="au-input au-input--full" type="password" name="renewPass" id="renewPass" placeholder="Nhập lại mật khẩu mới">
        </div>
        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Thay đổi</button>
    }
</div>
@section jsFooter{
    <script type="text/javascript">


    </script>
}

