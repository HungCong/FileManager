
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/Login_layout.cshtml";
}


<div class="login-logo">
    <h3>Quên mật khẩu</h3>
</div>
<div class="login-form">
    @using (Html.BeginForm("ForgetPass", "Login", FormMethod.Post, new { id = "forgetPass" }))
    {
        <div class="form-group">
            <label>Email</label>
            <input class="au-input au-input--full" type="email" name="Email" placeholder="Nhập email để nhận lại mật khẩu">
            <span class="has-error">@ViewBag.EmailError</span>
        </div>
            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">Gửi</button>
    }
</div>


